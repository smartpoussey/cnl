#include <sys/types.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <stdio.h>

int main(){
    key_t mem_key;s
    int shm_id;
    int *shm_ptr;

    mem_key = ftok(".", 'a')

    shm_id = shmget(mem_key, 4*(sizeof(int))), IPC_CREAT | 0666);

    if (shm_id <0){
        printf("*** shmget error (server) ***\n");
        exit(1);
    }

    shm_ptr = (int*)shmat(shm_id, NULL, 0)

    if ((int)shm_ptr ==-1){
        printf("*** shmmat error (server) ***\n");
        exit(1);
    }

}
